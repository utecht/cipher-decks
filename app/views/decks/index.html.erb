
<h2>Create New Deck</h2>
<form method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label>Name</label>
  <input name="name" type="text">
  <input type="submit" value="Create New Deck">
</form>

<h2>Decks</h2>
<table>
  <% @decks.each do |deck| %>
  <tr>
    <td><%= link_to deck.name, deck_path(deck) %></td>
    <td><%= link_to 'Destroy?', deck_path(deck),
             :confirm => 'Are you sure?',
             :method => :delete %></td>
  </tr>
  <% end %>
</table>
